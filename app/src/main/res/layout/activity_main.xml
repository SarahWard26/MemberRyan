<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true"
    tools:context="com.example.sarahward.memberryan.MainActivity"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal"
        android:background="@android:color/holo_purple">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member Ryan?"/>

        <Button
            android:id="@+id/randyButton"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/Randy"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/homepage" />

    <ImageView
        android:layout_width="281dp"
        android:layout_height="197dp"
        app:srcCompat="@drawable/member"
        android:id="@+id/berryOne" />

    <ImageView
        android:layout_width="281dp"
        android:layout_height="244dp"
        app:srcCompat="@drawable/membertwo"
        android:id="@+id/berryTwo" />

</LinearLayout>
